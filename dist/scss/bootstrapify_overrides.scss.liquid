    float: none;
    text-align: center;
    > li{
      float: none;
      display: inline-block;
    }
    .dropdown-menu{
      text-align: left;
    }
  }

  .has-mega-menu .navbar {
    .nav li.dropdown.open {
      display: block;
      position: static;
  
      .dropdown-menu {
        padding: 0;
        padding-top: $grid-gutter-width;
        padding-bottom: $grid-gutter-width;
        left: -25%;
        right: -25%;
    
