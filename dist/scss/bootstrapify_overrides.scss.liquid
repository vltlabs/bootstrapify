/* Navbars */
@media (min-width: $screen-sm-min){
  .navbar-nav.navbar-left:first-child{
    margin-left: ($grid-gutter-width / -2);
  }
  .navbar-text.navbar-left:first-child{
    margin-left: 0;
  }
  
